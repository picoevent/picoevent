<!doctype html>
<head>
    <title>PicoEvent Login</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/stylesheet.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='jquery-ui/jquery-ui.css') }}">
    <script language="JavaScript" src="{{ url_for('static', filename='jquery-ui/jquery-ui.js') }}"></script>
</head>
<body class="dark_grey_background">
<div id="login_main">
    <div id="admin_header" class="ui_div_highlight">
        <h3 class="h3_admin_header">PicoEvent Business Intelligence Platform</h3>
        <p class="p_admin_header">Analyst/Administrator Login</p>
    </div>
    <div id="messages_container">
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="ui-state-error ui-corner-all" style="padding: 0 .7em;">
                        <p><span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
                            <strong>Error:</strong> {{ message }}</p>
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}
    </div>
    <div class="ui-widget">

    </div>
    <div id="login_box" class="ui_div_background">
        <form action="/admin/login" method="post" id="form_login">
            <table id="login_table" cellpadding="5">

                <tr>
                    <td><label class="login_label">E-Mail Address</label></td>
                    <td align="right"><input size="35" name="username" class="dark_input"/></td>
                </tr>
                <tr>
                    <td><label class="login_label">Password</label></td>
                    <td align="right"><input size="35" name="password" type="password" class="dark_input"/></td>
                </tr>
                <tr>
                    <td>
                        [&nbsp;<a id="reset_password" class="main_anchor" href="#">reset password</a>&nbsp;]
                    </td>
                    <td align="right">
                        <input class="blue_small_submit_button" type="Submit" value="Login"/>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
</body>